    <%= f.label :event_url %><br />
  <%=  f.text_field :event_url  %>
  </div>

  <div class="field fleft padleft">
    <%= f.label :cost %><br />
  <%=  select(:event,:cost,@costs) %>
  </div>

  <%= f.text_field :organizer_id , :size => 10 %>

  <div class="clear"></div>
  <div class="actions">
    <%= f.submit %>
  </div>
